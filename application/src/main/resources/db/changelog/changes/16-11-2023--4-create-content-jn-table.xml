<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="16-11-2023--2-create-content-jn-table">
        <createTable tableName="content_jn">
            <column name="id" type="BIGINT">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="filename" type="VARCHAR(30)">
                <constraints
                        nullable="false"/>
            </column>
            <column name="bytes" type="BYTEA">
                <constraints
                        nullable="false"/>
            </column>
            <column name="content_type" type="VARCHAR(30)">
                <constraints
                        nullable="false"/>
            </column>
            <column name="size" type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>
            <column name="resource_id" type="BIGINT">
                <constraints
                        nullable="false"
                        foreignKeyName="content_jn_resource_fkey" references="resource_jn(id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="content_jn"/>
        </rollback>
    </changeSet>
</databaseChangeLog>