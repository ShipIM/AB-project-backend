<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="16-11-2023--5-create-subject-jn-table">
        <createTable tableName="subject_jn">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
            <column name="course_id" type="BIGINT">
                <constraints
                        nullable="false"
                        foreignKeyName="subject_jn_course_fkey" references="course_ref(id)"/>
            </column>
        </createTable>
        <addUniqueConstraint
                columnNames="course_id, name"
                constraintName="course_subject_name_constraint"
                tableName="subject_jn"/>
        <rollback>
            <dropTable tableName="subject_jn"/>
        </rollback>
    </changeSet>
</databaseChangeLog>