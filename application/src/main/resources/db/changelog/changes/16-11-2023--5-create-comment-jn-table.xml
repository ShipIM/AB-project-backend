<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="16-11-2023--1-create-comment-jn-table">
        <createTable tableName="comment_jn">
            <column name="id" type="BIGINT">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="author" type="VARCHAR(30)">
                <constraints
                        nullable="true"/>
            </column>
            <column name="created_date" type="TIMESTAMP">
                <constraints
                        nullable="false"/>
            </column>
            <column name="text" type="VARCHAR(255)">
                <constraints
                        nullable="false"/>
            </column>
            <column name="resource" type="BIGINT">
                <constraints
                        nullable="false"
                        foreignKeyName="comment_jn_resource_fkey" references="resource_jn(id)"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="comment_jn"/>
        </rollback>
    </changeSet>
</databaseChangeLog>